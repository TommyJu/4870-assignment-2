@page "/edit-article/{articleId:int}"
@using BloggerBlazorServer.Services
@inject NavigationManager navigationManager
@inject ArticleService articleService

<h1>Edit Article</h1>

@if (isLoading)
{
    <div class="text-center">
        <p>Loading article...</p>
    </div>
}
else if (Model == null)
{
    <p>Article not found.</p>
}
else
{
    <form method="post" @onsubmit="UpdateArticle" style="display:flex; flex-direction: column; gap:24px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" @bind="@Model.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Body" class="control-label"></label>
            <textarea asp-for="Body" class="form-control" rows="10" @bind="@Model.Body"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary" disabled="@isLoading" />
        </div>

        <div>
            <a href="/" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
}


@code {
    [Parameter]
    public int articleId { get; set; }
    private Article? Model { get; set; }
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Model = await articleService.GetArticleByIdAsync(articleId);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error fetching article: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
    private async Task UpdateArticle()
    {
        if (Model != null)
        {
            await articleService.UpdateArticleAsync(Model);
            navigationManager.NavigateTo("/");
        }

    }
}
